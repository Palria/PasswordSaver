<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHeaderTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/secondary_app_color"
        android:text="Password Saver"
        android:textColor="@color/white"
        android:textSize="11pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <fragment
        android:id="@+id/homeFragmentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.palria.passwordsaver.UserProfileFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeaderTextViewId"
        
        />

</androidx.constraintlayout.widget.ConstraintLayout>