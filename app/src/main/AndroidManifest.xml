<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palria.passwordsaver">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/password_saver_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/password_saver_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting">
        <activity
            android:name=".EditCurrentUserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.LearnEra">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    
        <activity
            android:name=".UserActivityLogActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".SecurityTipsActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".SinglePasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".SingleNotesActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".AddNewPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".CreateNewNotesActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra" />
    
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra" />
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.LearnEra" />
    </application>

</manifest>